<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:background="@drawable/back_ground_better"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Восстановить пароль"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/recover_email"
            android:padding="10dp"
            android:background="@drawable/et_background"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите Email"/>

        <EditText
            android:id="@+id/recover_old_password"
            android:layout_marginTop="13dp"
            android:background="@drawable/et_background"
            android:padding="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Старый пароль"/>

        <EditText
            android:id="@+id/recover_new_password1"
            android:layout_marginTop="13dp"
            android:background="@drawable/et_background"
            android:padding="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Новый пароль"/>
        <EditText
            android:id="@+id/recover_new_password2"
            android:layout_marginTop="13dp"
            android:background="@drawable/et_background"
            android:padding="10dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Повторите пароль"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <Button
           app:backgroundTint="@null"
           android:id="@+id/btn_back"
           android:textAppearance="@style/TextAppearance.AppCompat.Large"
           android:layout_weight="1"
           android:textColor="@color/white"
           android:background="@drawable/btn_background"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="НАЗАД"/>
        <Button
            app:backgroundTint="@null"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/btn_recover"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/btn_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВОССТАНОВИТЬ"/>


    </LinearLayout>
    </LinearLayout>



</LinearLayout>